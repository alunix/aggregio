    <ProgressBar
        android:indeterminate="true"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp">
                <FrameLayout
                    android:id="@+id/article_detail_image_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true">


                    <ImageView
                        android:id="@+id/article_detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:scaleType="centerCrop"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/gradient_shape_90"/>
                </FrameLayout>
            <android.support.v7.widget.Toolbar
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:padding="10dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/article_item_publisher_logo"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />


                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_alignRight="@+id/article_item_publisher_logo"
                    android:layout_width="0dp"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/article_detail_publisher_name"
                        android:textColor="@android:color/secondary_text_light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:textColor="@android:color/tertiary_text_light"
                        android:id="@+id/article_detail_time_ago"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/article_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:paddingTop="5dp"
                        android:textColor="@android:color/secondary_text_light"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:id="@+id/article_detail_text"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_view_on_web"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/view_on_web"/>
                        <Button
                            android:id="@+id/btn_bookmark"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Bookmark"/>
                    </LinearLayout>

                </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/bookmark_fab"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@drawable/ic_bookmark_outline_white_24dp"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"/>
        </RelativeLayout>



    </ScrollView>
    </RelativeLayout>



</ViewSwitcher>