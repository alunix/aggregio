<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginLeft="16dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/also_read"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/article_related1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:visibility="gone"
                android:id="@+id/article_related1_image"
                android:layout_width="80dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@color/wait_color"
                fresco:roundedCornerRadius="2dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="false"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="false"
                android:layout_height="80dp" />
            <TextView
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/body_text_1"
                android:layout_toRightOf="@+id/article_related1_image"
                android:layout_toEndOf="@+id/article_related1_image"
                android:id="@+id/article_related1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:textSize="12sp"
                android:textColor="@android:color/tertiary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_toRightOf="@+id/article_related1_image"
                android:layout_toEndOf="@+id/article_related1_image"
                android:layout_below="@+id/article_related1_title"
                android:id="@+id/article_related1_timeago"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/article_related2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:visibility="gone"
                android:id="@+id/article_related2_image"
                android:layout_width="80dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@color/wait_color"
                fresco:roundedCornerRadius="2dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="false"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="false"
                android:layout_height="80dp" />
            <TextView
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/body_text_1"
                android:layout_toRightOf="@+id/article_related2_image"
                android:layout_toEndOf="@+id/article_related2_image"
                android:id="@+id/article_related2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:textSize="12sp"
                android:textColor="@android:color/tertiary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_toRightOf="@+id/article_related2_image"
                android:layout_toEndOf="@+id/article_related2_image"
                android:layout_below="@+id/article_related2_title"
                android:id="@+id/article_related2_timeago"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/article_related3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:visibility="gone"
                android:id="@+id/article_related3_image"
                android:layout_width="80dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@color/wait_color"
                fresco:roundedCornerRadius="2dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="false"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="false"
                android:layout_height="80dp" />
            <TextView
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/body_text_1"
                android:layout_toRightOf="@+id/article_related3_image"
                android:layout_toEndOf="@+id/article_related3_image"
                android:id="@+id/article_related3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:textSize="12sp"
                android:textColor="@android:color/tertiary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_toRightOf="@+id/article_related3_image"
                android:layout_toEndOf="@+id/article_related3_image"
                android:layout_below="@+id/article_related3_title"
                android:id="@+id/article_related3_timeago"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>