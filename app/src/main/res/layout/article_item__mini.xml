<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        card_view:cardBackgroundColor="@color/cardview_light_background"
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        app:elevation="100dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.joooonho.SelectableRoundedImageView
                android:visibility="gone"
                android:id="@+id/article_item_image"
                android:layout_width="120dp"
                android:scaleType="centerCrop"
                android:layout_height="120dp"
                app:sriv_left_top_corner_radius="4dp"
                app:sriv_right_top_corner_radius="4dp"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_right_bottom_corner_radius="0dp"
                android:src="@drawable/no_img_placeholder"
                />
            <TextView
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/body_text_1"
                android:layout_toRightOf="@+id/article_item_image"
                android:layout_toEndOf="@+id/article_item_image"
                android:id="@+id/article_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                android:ellipsize="end"
                android:padding="5dp"
                android:layout_toRightOf="@+id/article_item_image"
                android:layout_toEndOf="@+id/article_item_image"
                android:layout_below="@+id/article_item_title"
                android:id="@+id/article_item_publisher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"/>

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:textColor="@android:color/tertiary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_toRightOf="@+id/article_item_image"
                android:layout_toEndOf="@+id/article_item_image"
                android:layout_below="@+id/article_item_publisher_name"
                android:id="@+id/article_item_time_ago"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>