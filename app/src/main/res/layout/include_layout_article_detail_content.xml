<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp">

<TextView
    android:id="@+id/article_detail_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textColor="@android:color/black"
    android:textSize="20sp"
    android:textStyle="bold" />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="5">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/article_item_publisher_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="2dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@color/wait_color"
        fresco:placeholderImageScaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/article_item_publisher_logo"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="2dp">

        <TextView
            android:id="@+id/article_detail_publisher_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/article_detail_time_ago"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/tertiary_text_light" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:textSize="16sp"
        android:id="@+id/article_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:lineSpacingMultiplier="1.2"
        android:linksClickable="true"
        android:textColor="@android:color/secondary_text_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_view_on_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_on_web" />
    </LinearLayout>

</LinearLayout>

<include layout="@layout/include_also_read"></include>


</LinearLayout>