<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_view_switcher">

    <include layout="@layout/include_progress_bar"/>

        <ScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.design.widget.AppBarLayout
                        android:id="@+id/appbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <FrameLayout
                                android:id="@+id/article_detail_image_frame"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fitsSystemWindows="true">


                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/article_detail_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="500dp"
                                    fresco:actualImageScaleType="focusCrop"
                                    fresco:fadeDuration="300"
                                    fresco:placeholderImage="@color/wait_color"
                                    fresco:placeholderImageScaleType="fitCenter" />
                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:background="@drawable/gradient_shape_90"/>
                            </FrameLayout>
                            <android.support.v7.widget.Toolbar
                                android:id="@+id/toolbar2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                    </android.support.design.widget.AppBarLayout>
                    <TextView
                        android:id="@+id/article_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/article_item_publisher_logo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            fresco:actualImageScaleType="focusCrop"
                            fresco:fadeDuration="300"
                            fresco:placeholderImage="@color/wait_color"
                            fresco:placeholderImageScaleType="fitCenter" />




                        <LinearLayout
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:layout_alignRight="@+id/article_item_publisher_logo"
                            android:layout_width="0dp"
                            android:paddingLeft="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/article_detail_publisher_name"
                                android:textColor="@android:color/secondary_text_light"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />
                            <com.github.curioustechizen.ago.RelativeTimeTextView
                                android:textColor="@android:color/tertiary_text_light"
                                android:id="@+id/article_detail_time_ago"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                        <TextView
                            android:padding="10dp"
                            android:id="@+id/article_detail_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:lineSpacingMultiplier="1.2"
                            android:linksClickable="true"
                            android:textColor="@android:color/secondary_text_light" />
                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btn_view_on_web"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/view_on_web"/>
                            <Button
                                android:id="@+id/btn_bookmark"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Bookmark"/>
                        </LinearLayout>

                    </LinearLayout>


        </ScrollView>



</ViewSwitcher>