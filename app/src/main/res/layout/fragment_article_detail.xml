<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_view_switcher"
    >
    <ProgressBar
        android:indeterminate="true"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<android.support.design.widget.CoordinatorLayout android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:theme="@style/ThemeOverlay.Aggregio"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="#b3ffffff"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:id="@+id/article_detail_image_frame"
                app:layout_collapseMode="parallax"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:fitsSystemWindows="true">
                <com.facebook.drawee.view.SimpleDraweeView
                    fresco:fadeDuration="300"
                    android:id="@+id/article_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:placeholderImage="@color/wait_color"
                    fresco:placeholderImageScaleType="fitCenter"
                    />
                <View
                    android:fitsSystemWindows="true"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_shape_90"/>
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.Aggregio"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">
            <TextView
                android:padding="10dp"
                android:id="@+id/article_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:padding="10dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/article_item_publisher_logo"
                    android:padding="2dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:placeholderImage="@color/wait_color"
                    fresco:placeholderImageScaleType="fitCenter"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_alignRight="@+id/article_item_publisher_logo"
                    android:layout_width="0dp"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/article_detail_publisher_name"
                        android:textColor="@android:color/secondary_text_light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:textColor="@android:color/tertiary_text_light"
                        android:id="@+id/article_detail_time_ago"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="serif"
                        android:textColor="@android:color/secondary_text_light"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:id="@+id/article_detail_text"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_view_on_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_on_web"/>
                    </LinearLayout>

                </LinearLayout>

            <include layout="@layout/include_also_read"></include>


        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        app:borderWidth="0dp"
        android:id="@+id/bookmark_fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_bookmark_outline_white_24dp"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"/>


</android.support.design.widget.CoordinatorLayout>
</ViewSwitcher>