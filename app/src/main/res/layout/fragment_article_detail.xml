<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_view_switcher"
    >
    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:cpb_rotation_speed="1.0"
        app:cpb_sweep_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_min_sweep_angle="10"
        app:cpb_max_sweep_angle="300"
        style="@style/CircularThemeProgressBar"
        android:layout_gravity="center"
        android:id="@+id/progress"
        />

<android.support.design.widget.CoordinatorLayout android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginBottom="32dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:id="@+id/article_detail_image_frame"
                app:layout_collapseMode="parallax"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:fitsSystemWindows="true">
                <com.facebook.drawee.view.SimpleDraweeView
                    fresco:fadeDuration="300"
                    android:id="@+id/article_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:placeholderImage="@color/wait_color"
                    fresco:placeholderImageScaleType="fitCenter"
                    />
                <View
                    android:fitsSystemWindows="true"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/gradient_shape_90"/>
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/article_item_publisher_logo"
                    android:padding="2dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:placeholderImage="@color/wait_color"
                    fresco:placeholderImageScaleType="fitCenter"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />


                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_alignRight="@+id/article_item_publisher_logo"
                    android:layout_width="0dp"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/article_detail_publisher_name"
                        android:textColor="@android:color/secondary_text_light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:text="2hrs ago"
                        android:textColor="@android:color/tertiary_text_light"
                        android:id="@+id/article_detail_time_ago"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/article_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:paddingTop="5dp"
                        android:textColor="@android:color/secondary_text_light"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:id="@+id/article_detail_text"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_view_on_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_on_web"/>
                    <!--<Button-->
                        <!--android:id="@+id/btn_share"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/action_share"/>-->
                    </LinearLayout>

                </LinearLayout>

            <TextView
                android:layout_marginLeft="16dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/also_read"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/article_related1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:visibility="gone"
                        android:id="@+id/article_related1_image"
                        android:layout_width="80dp"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:placeholderImage="@color/wait_color"
                        fresco:roundedCornerRadius="2dp"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="false"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="false"
                        android:layout_height="80dp" />
                    <TextView
                        android:fontFamily="sans-serif"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:textColor="@color/body_text_1"
                        android:layout_toRightOf="@+id/article_related1_image"
                        android:layout_toEndOf="@+id/article_related1_image"
                        android:id="@+id/article_related1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:textSize="12sp"
                        android:textColor="@android:color/tertiary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_toRightOf="@+id/article_related1_image"
                        android:layout_toEndOf="@+id/article_related1_image"
                        android:layout_below="@+id/article_related1_title"
                        android:id="@+id/article_related1_timeago"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/article_related2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:visibility="gone"
                        android:id="@+id/article_related2_image"
                        android:layout_width="80dp"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:placeholderImage="@color/wait_color"
                        fresco:roundedCornerRadius="2dp"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="false"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="false"
                        android:layout_height="80dp" />
                    <TextView
                        android:fontFamily="sans-serif"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:textColor="@color/body_text_1"
                        android:layout_toRightOf="@+id/article_related2_image"
                        android:layout_toEndOf="@+id/article_related2_image"
                        android:id="@+id/article_related2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:textSize="12sp"
                        android:textColor="@android:color/tertiary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_toRightOf="@+id/article_related2_image"
                        android:layout_toEndOf="@+id/article_related2_image"
                        android:layout_below="@+id/article_related2_title"
                        android:id="@+id/article_related2_timeago"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/article_related3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:visibility="gone"
                        android:id="@+id/article_related3_image"
                        android:layout_width="80dp"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:placeholderImage="@color/wait_color"
                        fresco:roundedCornerRadius="2dp"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="false"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="false"
                        android:layout_height="80dp" />
                    <TextView
                        android:fontFamily="sans-serif"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:textColor="@color/body_text_1"
                        android:layout_toRightOf="@+id/article_related3_image"
                        android:layout_toEndOf="@+id/article_related3_image"
                        android:id="@+id/article_related3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:textSize="12sp"
                        android:textColor="@android:color/tertiary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_toRightOf="@+id/article_related3_image"
                        android:layout_toEndOf="@+id/article_related3_image"
                        android:layout_below="@+id/article_related3_title"
                        android:id="@+id/article_related3_timeago"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bookmark_fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_bookmark_outline_white_24dp"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"/>


</android.support.design.widget.CoordinatorLayout>
</ViewSwitcher>