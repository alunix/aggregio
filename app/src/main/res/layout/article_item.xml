<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        card_view:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/article_item_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:padding="5dp"
                android:id="@+id/article_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:fontFamily="sans-serif-light"
                />
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/article_item_source_logo"
                    android:src="@drawable/new_vision_logo_square"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />


                <LinearLayout
                    android:padding="2dp"
                    android:orientation="vertical"
                    android:layout_alignRight="@+id/article_item_source_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/article_item_source_name"
                        android:text="New Vision"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="2hrs ago"
                        android:id="@+id/article_item_time_ago"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>